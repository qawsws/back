<?xml version="1.0" encoding="UTF-8"?>
<!-- 의존성 주입에서 사용할 객체를 찾아 context에 저장할지 설정하는 파일 -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mybatis="http://mybatis.org/schema/mybatis-spring"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd
       http://mybatis.org/schema/mybatis-spring
       https://mybatis.org/schema/mybatis-spring.xsd">
    <!-- base-package에 적은 패키지 안에 있는
                        의존성 주입에 사용할 객체를 찾아서 등록-->
    <context:component-scan base-package="org.zerock.tourist_spring" />
    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="driverClassName" value="org.mariadb.jdbc.Driver" />
        <property name="jdbcUrl" value="jdbc:mariadb://localhost:3307/touristdb" />
        <property name="username" value="root" />
        <property name="password" value="1234" />
        <property name="dataSourceProperties">
            <props>
                <prop key="cachePrepStmts">true</prop>
                <prop key="prepStmtCacheSize">250</prop>
                <prop key="prepStmtCacheSqlLimit">2048</prop>
            </props>
        </property>
    </bean>
    <bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource"
          destroy-method="close">
        <constructor-arg ref="hikariConfig"/>
    </bean>
    <!-- Mybatis 설정-->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <!--mapper로 사용할 xml파일을 연동하는 설정-->
        <property name="mapperLocations" value="classpath:/mappers/**/*.xml" />
    </bean>
    <mybatis:scan base-package="org.zerock.tourist_spring.member.mapper
    org.zerock.tourist_spring.board.mapper" />
</beans>







